@model IEnumerable<DataLayer.Models.Produits>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Couleur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateMiseEnVente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Promotion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pays.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SousCategories.Nom)
        </th>
        <th>Photo(s)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Couleur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateMiseEnVente)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Promotion)*@
           <p>@((1-item.Promotion)*100) %</p>
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pays.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SousCategories.Nom)
        </td>
        <td>
            <div class="btn-group-vertical">@Html.Action("PhotoProduit", "Produits", new { id = @item.IdProduit.ToString() })</div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdProduit }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdProduit }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdProduit })
        </td>
    </tr>
}

</table>
