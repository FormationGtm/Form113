@model List<int>

<div class="panel danger">
    <div class="heading">
        <strong>Nouveautés !</strong>
    </div>
    <div class="content">
        @*Pour chaque produit à afficher (3) on appelle la vue partielle correspondante*@
            @foreach (var element in @Model)
            {
                @Html.Action("MiniatProduit", "Produit", new { id = element })
            }
    </div>
</div>
