@model List<int>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexCategories</title>
</head>
<body>
    <div>@foreach (var cat in @Model)
         {
        <div class="col-lg-4">
            @Html.Action("Categorie", "Categorie", new { id=cat})
            </div>
            }
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading">Toutes les catégories de produits</div>
                <div class="panel-body">
                    @Html.ActionLink("Details", "ProduitsCategorie/", "Catalogue")
                </div>
            </div>
        </div>
        </div>
</body>
</html>
