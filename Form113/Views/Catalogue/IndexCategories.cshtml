@model List<int>


<!DOCTYPE html>
@section scripts {
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
}
@section styles {
    <link href="~/Scripts/Catalog/Image2.css" rel="stylesheet" />
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexCategories</title>
</head>

<body>
    <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-success">
                <div class="panel-heading" style="text-align:center;">@Html.ActionLink("Tous les produits", "ProduitsCategorie/", "Catalogue")</div>
            </div>
        </div>
        <div class="col-sm-4"></div>

        <div class="row"></div>

        <ul class="rig columns-3">
            @foreach (var cat in @Model)
            {
                <li>
                    @Html.Action("Categorie", "Categorie", new { id = cat })

                </li>
            }
        </ul>

    </div>
</body>
</html>
