@model List<int>


<!DOCTYPE html>
@section scripts {
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
}
@section styles {
<link href="~/Scripts/Catalog/Image2.css" rel="stylesheet" />

}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexSousCategories</title>
</head>
<body>
    <div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-success">
                <div class="panel-heading" style="text-align:center;">@Html.ActionLink("Tous les produits de la catégorie", (string)("ProduitsCategorie/" + @ViewBag.idcat), "Catalogue")</div>
            </div>
        </div>

        <div class="col-sm-4"></div>

        <div class="row"></div>


        <ul class="rig columns-3">
            @foreach (var scat in @Model)
            {
                <li>
                    @Html.Action("SousCategorie", "SousCategorie", new { id = scat })
                </li>
            }
        </ul>
    </div>
</body>
</html>