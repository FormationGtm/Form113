@using Form113.Helper
@model DataLayer.Models.Produits

@*Affichage simple d'un produit*@

<div class="panel Promo">
    <div class="heading">@Model.Nom</div>
    <div class="content">
        <a href="../Produit/Detail/@Model.IdProduit" class=" fill-div">
            <div class="Product">
                @if (@Model.Photos.Count != 0)
                {
                    <a href="/Produit/Detail/@Model.IdProduit" class="fill-div">
                        <div id="CategorieImg" class="MonAffichageImage">@Html.ImageHelp(Model.Photos.FirstOrDefault().PhotoName)</div>
                    </a>
                }
                Provenance : @Model.Pays.Name
                Prix Original : @Model.Prix
                Prix avec réduction : @(Model.Prix * Model.Promotion)
            </div>
        </a>
    </div>
</div>


@section styles {
    <link href="~/Scripts/Catalog/Image2.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    @*<script src="~/Plugins/Metro-UI/js/metro.min.js"></script>*@
}